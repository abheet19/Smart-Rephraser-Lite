{
  "manifest_version": 3,
  "name": "Smart Rephraser Lite",
  "description": "Rephrase text instantly using AI-lite transformation.",
  "version": "1.0.0",

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },

  "permissions": ["storage"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
