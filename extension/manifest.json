{
  "manifest_version": 3,
  "name": "Smart Rephraser Lite",
  "description": "Rephrase text instantly using AI-lite transformation.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png",
    "default_title": "Smart Rephraser Lite"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://api.openai.com/*",
    "http://localhost/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}